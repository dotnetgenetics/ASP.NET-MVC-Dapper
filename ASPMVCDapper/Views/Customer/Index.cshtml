@model IEnumerable<ASPMVCDapper.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<br />
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<div class="table-responsive">

    <table id="tblCustomerInformation" class="table table-bordered table-condensed table-striped">
        <tr>
            <th>
                @Html.Label("Company Name")
            </th>
            <th>
                @Html.Label("Address")
            </th>
            <th>
                @Html.Label("City")
            </th>
            <th>
                @Html.Label("State")
            </th>
            <th>
                @Html.Label("Intro Date")
            </th>
            <th>
                @Html.Label("Credit Limit")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IntroDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreditLimit)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CustomerID }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.CustomerID }, new { @class = "btn btn-warning" })
                </td>
            </tr>
        }

    </table>
</div>
